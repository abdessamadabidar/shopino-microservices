#!user/bin/env groovy
@Library('jenkins-shared-library')_

pipeline {
    agent any
    tools {
        maven "maven"
    }

    environment {
        IMAGE_VERSION = 'micro-1.0.0'
    }

    stages {

        stage("build Jar") {
            steps {
                script {
                    buildJar 'config-service'
                }
            }
        }

        stage("build and push Image") {
            steps {
                script {
                    dockerLogin()
                    dockerBuild 'abdessamadabidar/shopino-microservices', "${IMAGE_VERSION}", 'services/config-service/'
                }
            }
        }

    }
}